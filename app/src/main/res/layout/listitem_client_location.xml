<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="@dimen/listitem_padding">

    <TextView
        android:id="@+id/textView_locationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="BEDRIJF 1"
        style="@style/Imc.TextView.List.Header"
        />

    <TextView
        android:id="@+id/textView_clientnameAndCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Klant A - Gent"
        style="@style/Imc.TextView.List"
        />

    <TextView
        android:id="@+id/textView_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Bellevue 5, 9050 Ledeberg"
        style="@style/Imc.TextView.List"
        />


</LinearLayout>